---
import Container from "../components/basics/Container.astro";
import Layout from "../layouts/Layout.astro";
import Text from "../components/basics/Text.astro";
import CertificationItem from "../views/certifications/CertificationItem.astro";
import { certificationsList } from "../data/certifications";
import { base_url } from "../../utils/global";
import LetsWorkTogether from "../views/contact/LetsWorkTogether.astro";
---

<Layout>
    <man view-transition-name="page">
        <Container columns={1}>
            {certificationsList.map((cert, index) => (
              <CertificationItem key={index} label={cert.label}>
                <Text>{cert.description}</Text>
                <br />
                <img src={`${base_url}${cert.image}`} width="100%" alt={cert.alt} />
              </CertificationItem>
            ))}
          </Container>
        <LetsWorkTogether />
    </man>
</Layout>
