---
import HeaderDesktop from "../layout/HeaderDesktop.astro";
import HeaderMobile from "../layout/HeaderMobile.astro";
import "@fontsource/rubik";
import ScrollToTopButton from "../layout/ScrollButton/ScrollToTopButton";
import Footer from "../layout/Footer.astro";
import { base_url } from "../../utils/global";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/x-icon" href={`${base_url}/favicon.ico`} />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Essentials -->
		<title>Digital Marketing - Robert Riera</title>
		<meta
			name="description"
			content="Boost your brand with top-tier digital marketing strategies. Learn SEO, PPC, social media, and content marketing from Robert Riera."
		/>
		<meta
			name="keywords"
			content="digital marketing, SEO, social media, content marketing, PPC, branding, Robert Riera"
		/>
		<meta name="author" content="Robert Riera" />
		<link rel="canonical" href="https://robertriera.com/en/" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://robertriera.com/en/" />
		<meta property="og:title" content="Digital Marketing - Robert Riera" />
		<meta
			property="og:description"
			content="Boost your brand with top-tier digital marketing strategies. Learn SEO, PPC, social media, and content marketing from Robert Riera."
		/>
		<meta
			property="og:image"
			content="https://robertriera.com/en/images/robert-social-media-img.png"
		/>

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://robertriera.com/en/" />
		<meta
			property="twitter:title"
			content="Digital Marketing - Robert Riera"
		/>
		<meta
			property="twitter:description"
			content="Boost your brand with top-tier digital marketing strategies. Learn SEO, PPC, social media, and content marketing from Robert Riera."
		/>
		<meta
			property="twitter:image"
			content="https://robertriera.com/en/images/robert-social-media-img.png"
		/>

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700;900&display=swap"
		/>
		<link
			rel="alternate"
			hreflang="en"
			href="https://robertriera.com/en/"
		/>
		<link rel="alternate" hreflang="es" href="https://robertriera.com/" />
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-BBG66GM7V0"
		></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}

			window.addEventListener("DOMContentLoaded", function () {
				const script = document.createElement("script");
				script.src =
					"https://www.googletagmanager.com/gtag/js?id=G-BBG66GM7V0";
				script.async = true;
				document.head.appendChild(script);

				gtag("js", new Date());
				gtag("config", "G-BBG66GM7V0");
			});
		</script>
	</head>
	<body>
		<HeaderDesktop />
		<HeaderMobile />
		<ScrollToTopButton client:load />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	:root {
		--primary-dark: #1c1b1b;
		--primary-white: #f7f7f7;
		--secondary-green: #c0ff81;
		--primary-font: "rubik", sans-serif;
		font-family: var(--primary-font);
		background: rgb(29, 31, 17);
		/*background: linear-gradient(344deg, #1c1b1b 35%, rgba(47,54,28,1) 100%);
		/*background: #22261c;
		/*background: -webkit-linear-gradient(328deg, #22261c,#1c1b1b,#22261c);/* Chrome 10-25, Safari 5.1-6 */
		/*background: linear-gradient(328deg, #22261c,#1c1b1b,#22261c);/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
		width: 100vw !important;
		max-width: 100vw !important;
		overflow-x: hidden;
	}

	::view-transition-old(page),
	::view-transition-new(page) {
		animation: fade 0.5s ease;
	}

	@keyframes fade {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
</style>
