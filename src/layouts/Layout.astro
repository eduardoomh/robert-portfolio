---
import HeaderLogo from "../components/headers/HeaderLogo.astro";
import '@fontsource/rubik';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Robert Riera Portfolio - EN</title>

	</head>
	<body>
		<HeaderLogo client:load />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	:root {
		font-family: "rubik", sans-serif;
		background-color: #1C1B1B;
		width: 100vw;
		max-width: 100vw;
	}
</style>
