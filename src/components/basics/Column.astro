---
interface props {
  align?: string;
}

const { align } = Astro.props;
---

<div class={`column ${align}`}>
  <slot />
</div>

<style>
  .column {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 100%;
  }
  .center{
    align-items: center;
  }

  .flex-start{
    align-items: flex-start;
  }

  .flex-end{
    align-items: flex-end;
  }
</style>
