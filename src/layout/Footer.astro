<style>
  .footer-layout {
    padding: 64px 16px;
  }

  .footer-menu-block {
    color: var(--primary-white);
    list-style: none;
    padding: 0;
  }

  .footer-menu-block li {
    display: flex;
    align-items: center;
    height: 36px;
    color: var(--primary-white);
    cursor: pointer;
  }

  .footer-menu-block li a {
    text-decoration-line: none;
    color: inherit;
    transition: color 0.2s ease-in-out;
  }

  .footer-menu-block li a:hover {
    color: var(--secondary-green);
    text-decoration-line: underline;
  }

  .footer-menu-sections {
    margin-bottom: 3rem;
    color: var(--primary-white);
  }

  .footer-bottom p {
    text-align: center;
    color: var(--primary-white);
    margin-top: 2rem;
  }

  @media (min-width: 767px) {
    .footer-layout {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding-left: 0;
      padding-right: 0;
    }
    .footer-content {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      grid-template-rows: 1fr;
      gap: 3rem;
      width: 100vw;
      max-width: 1000px;
    }

    .footer-bottom {
      width: 100%;
      max-width: 1000px;
    }
  }
</style>
