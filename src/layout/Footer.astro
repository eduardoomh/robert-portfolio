    </section>

    <section class="footer-menu-sections">
      <h3>Projects</h3>
      <Divider />
      <ul class="footer-menu-block">
        <li>
          <CustomLink href="/companies/vida-natural-plus"
            >Vida natural plus</CustomLink>
